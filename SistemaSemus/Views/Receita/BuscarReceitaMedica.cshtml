@model IEnumerable<SistemaSemus.Models.Application.ReceitaMedica>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="modalReceitasMedicasLabel">Receitas Médica</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="modal-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nº</th>
                        <th>Médico</th>
                        <th>Data Entrada</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.ID)</td>
                                <td>@Html.DisplayFor(modelItem => item.Medico.Nome)</td>
                                <td>@Html.DisplayFor(modelItem => item.DataCadastro)</td>
                                <td>@Html.ActionLink("Abrir", "Create", new { id = item.ID })</td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
        </div>
    </div>
</div>