@model SistemaSemus.Models.Suprimento

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutDelete.cshtml";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <img class="mb-4" src="~/Images/Trash-Full-icon.png" alt="" width="100" height="100">
    <h1 class="h3 mb-3 font-weight-normal">Apagar registro?</h1>
    <label for="inputEmail" class="sr-only">Descrição</label>
    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", id = "inputEmail", disabled = "disabled" } })
    <label for="inputPassword" class="sr-only">Data Entrada</label>
    @Html.TextBoxFor(model => model.DataEntrada, "{0:dd/MM/yyyy}", new { @class = "form-control", id = "inputPassword", disabled = "disabled" })

    <div class="checkbox mb-3">
        <label>
            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.DataEntrada, "", new { @class = "text-danger" })
        </label>
    </div>

    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-lg btn-secondary btn-block" })
    <button class="btn btn-lg btn-primary btn-block" type="submit">Concluir</button>
    <!-- Footer -->
    <p class="mt-5 mb-3 text-muted">&copy; @DateTime.Now.Year - SEMUS</p>
}