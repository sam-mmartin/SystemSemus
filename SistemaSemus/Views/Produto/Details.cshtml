@model IEnumerable<SistemaSemus.Models.Produto>

@{
    ViewBag.Title = "Distribuição";
    Layout = "~/Views/Shared/_LayoutEstoques.cshtml";
}

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Distribuição</h1>
        <div class="btn-toolbar mb-2 mb-md-0">

            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                <span data-feather="calendar"></span> This week
            </button>
        </div>
    </div>

    <div class="container">
        <div class="card-deck mb-3 text-center">
            <div class="row">
                @foreach (var item in Model)
                {
                    int quantidade = 0;
                    foreach (var elemento in item.EstoqueSemus)
                    {
                        quantidade += elemento.QuantidadeTotal;
                    }

                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <div class="card-header">
                                <h6 class="my-0 font-weight-normal">@item.Descricao</h6>
                            </div>

                            <div class="card-body">
                                <h4 class="card-title pricing-card-title">
                                    <small class="text-muted">Quantidade Total /</small> @quantidade
                                </h4>

                                <ul class="list-unstyled mt-3 mb-4">
                                    <li><strong>Estoque : Quantidade</strong></li>
                                    @foreach (var elemento in item.EstoqueSemus)
                                    {
                                        <li>@elemento.EstoqueSemus.Descricao : @elemento.QuantidadeTotal</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</main>
