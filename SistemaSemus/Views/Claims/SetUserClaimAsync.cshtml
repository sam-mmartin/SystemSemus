@model SistemaSemus.ViewModels.ClaimViewModel

@{
    ViewBag.Title = "SetUserClaimAsync";
    Layout = "~/Views/Shared/_LayoutBeagle.cshtml";

    SistemaSemus.Models.ApplicationUser user = ViewBag.User;
}

<div class="be-content">
    <div class="main-content container-fluid">
        <div class="user-profile">
            <div class="row">

                <!-- Create -->
                <div class="col-lg-5">
                    <div class="card card-border-color card-border-color-danger">
                        <div class="card-header card-header-divider">Definir Claim<span class="card-subtitle">Adicione claim para usuário @user.UserName</span></div>
                        <div class="card-body">
                            <form action="/Claims/SetUserClaimAsync" method="post">


                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", user.Id)

                                <div class="form-group pt-2">
                                    @Html.LabelFor(model => model.Type)
                                    @Html.DropDownList("Type", null, new { @class = "form-control" })
                                </div>

                                <div class="form-group pt-2">
                                    @Html.LabelFor(model => model.Value)
                                    @Html.TextBoxFor(model => model.Value, new { @class = "form-control" })
                                </div>

                                <div class="row pt-3">
                                    <div class="col-lg-6 pb-4 pb-lg-0">
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="text-right">
                                            <button class="btn btn-space btn-danger" type="submit">Salvar</button>
                                            <a href="~/UsuarioManager/IndexAsync" class="btn btn-space btn-secondary" id="cancel">Voltar</a>
                                        </p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
